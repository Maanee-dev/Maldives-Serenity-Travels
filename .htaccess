<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # 1. If the request is for a physical file that exists (like a .jpg or .js), serve it directly
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]

  # 2. If the request is for a directory, but we want the SPA to handle it (like /stays/),
  # we override the default directory behavior and send it to the root index.html
  RewriteCond %{REQUEST_URI} !^/index\.html$
  RewriteRule ^ index.html [L]
</IfModule>