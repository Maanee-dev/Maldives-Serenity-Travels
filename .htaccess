<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # If the requested resource is a physical file or directory, serve it directly
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise, send all requests to index.html so React Router can handle them
  RewriteRule ^ index.html [L]
</IfModule>