<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # If the request is for a physical file or directory that exists, serve it
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise, redirect all other requests to index.html for React Router to handle
  RewriteRule ^ index.html [L]
</IfModule>